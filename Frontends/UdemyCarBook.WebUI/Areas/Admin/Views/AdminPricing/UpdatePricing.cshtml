@model UpdatePricingDto
@{
    ViewData["Title"] = "UpdatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Seçenek Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Seçenek Güncelleme işlemini aşagıdan yapabilirsiniz, veri girişi yaparen eksiksiz veri girişine
                            dikkat ediniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="PricingID" />
                            <div class="form-group">
                                <label for="exampleInputName">Seçenek Adı</label>
                                <input type="text" asp-for="Name" class="form-control" id="exampleInputName" placeholder="Seçenek Adını Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
