@model List<ResultLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Lokasyon Bilgileri Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Anasayfa ve araç kiralama sayfasında yer alan araçların alınış ve bırakılış noktalarını temsil eden
                            yer lokasyon kısmıdır.
                            Aşağıda araç kiralama noktaların ait lokasyon bilgierinin isimleri yer almaktadır. Sağ tarafta bulunan buton üzerinden
                            bu lokasyonun harita bilgisine erişim sağlayabillirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Adres </th>
                                        <th>Sil </th>
                                        <th>Güncelle</th>
                                        <th>Konumu Aç</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td><a href="/Admin/AdminLocation/RemoveLocation/@item.LocationID" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminLocation/UpdateLocation/@item.LocationID" class="btn btn-warning">Güncelle</a></td>
                                            <td><a href="#" class="btn btn-info">Konumu Aç</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminLocation/CreateLocation/" class="btn btn-dark">Yeni Lokasyon Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

