@model CreateLocationyDto
@{
    ViewData["Title"] = "CreateCatagory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Katagori Ekleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                           Yeni Katagori ekleme işlemini aşagıdan yapabilirsiniz, veri girişi yaparen eksiksiz veri girişine dikkat ediniz. 
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Katagori</label>
                                <input type="text" asp-for="Name" class="form-control" id="exampleInputName" placeholder="Katagori Bilgisi Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>