@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmetlerimiz Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Hizmetler Alanı ile ilgili silme, güncelleme, listeleme ve arama işlemlerini
                            bu sayfa üzerinden yapabilirsiniz,
                            En fazla 4 tane veri girişi olmasına dikkat ediniz tema bütünlüğü için, 4 ten fazla veri varsa silme butonunu kullanabilirsiniz
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Hizmet Adı</th>
                                        <th>Icon Url</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Tittle</td>
                                            <td>@item.IconUrl</td>
                                            <td><a href="/Admin/AdminServices/RemoveService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminServices/UpdateService/@item.ServiceID" class="btn btn-warning">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminServices/CreateService/" class="btn btn-info">Yeni Hizmet Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>