@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmet Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                             Hizmet Güncelleme işlemini aşagıdan yapabilirsiniz, veri girişi yaparen eksiksiz veri girişine dikkat ediniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="ServiceID"/>
                            <div class="form-group">
                                <label for="exampleInputTittle">Hizmet Adı</label>
                                <input type="text" asp-for="Tittle" class="form-control" id="exampleInputTittle" placeholder="Hizmet Adı Bilgisi Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIconUrl">Icon Url</label>
                                <input type="text" asp-for="IconUrl" class="form-control" id="exampleInputIconUrl" placeholder="IconUrl Bilgisi Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" asp-for="Description" class="form-control" id="exampleInputDescription" placeholder="Açıklama Adı Bilgisi Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>