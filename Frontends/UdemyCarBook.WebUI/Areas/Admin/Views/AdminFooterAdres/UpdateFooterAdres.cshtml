@model UpdateFooterAdresDto
@{
    ViewData["Title"] = "UpdateFooterAdres";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Alt İletişim Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Alt İletişim Güncelleme işlemini aşagıdan yapabilirsiniz, veri girişi yaparen eksiksiz veri girişine
                            dikkat ediniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="FooterAdreID" />
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" asp-for="Description" class="form-control" id="exampleInputDescription" placeholder="Açıklama Bilgisi Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputAdress">Adres</label>
                                <input type="text" asp-for="Adress" class="form-control" id="exampleInputAdress" placeholder="Adres Bilgisi Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhone">Telefon</label>
                                <input type="text" asp-for="Phone" class="form-control" id="exampleInputPhone" placeholder="Telefon Bilgisi Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Mail</label>
                                <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail" placeholder="Mail Bilgisi Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

