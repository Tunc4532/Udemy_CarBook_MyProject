
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Hemen Yorum Yapabilirsiniz</h3>
    <form method="post" asp-action="AddComment" asp-controller="Blog" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Adınız Soyadınız*</label>
            <input type="text" Name="Name" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="mail">Mail Adresiniz*</label>
            <input type="email" Name="Email" class="form-control" id="mail">
        </div>
        <div class="form-group">
            <input type="hidden" readonly value="@ViewBag.blogid" Name="BlokID" class="form-control">
        </div>
        <div class="form-group">
            <label for="message">Mesajınız</label>
            <textarea id="message" cols="20" Name="Description" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>
    </form>
</div>