@model CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
<div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form" method="post">
        <br />
        <h3 class="alert alert-success">Araç Kiralama Formu</h3>
        <input type="hidden" asp-for="CarId" value="@ViewBag.v3" />
        <div class="form-group">
            <input type="text" asp-for="Name" class="form-control" placeholder="Adınız">
        </div>
        <div class="form-group">
            <input type="text" asp-for="Surname" class="form-control" placeholder="Soyadınız">
        </div>
        <div class="form-group">
            <input type="email" asp-for="Email" class="form-control" placeholder="Mail Adresiniz">
        </div>
        <div class="form-group">
            <input type="text" asp-for="Phone" class="form-control" placeholder="Telefon Numaranız">
        </div>
        <div class="form-group">
            <select asp-for="DropOffLocationId" asp-items="@ViewBag.v" class="form-control">
                <option value="10">Alınmak İstenen Lokasyonu Seçiniz</option>
            </select>
        </div>
        <div class="form-group">
            <select asp-for="PickUpLocationId" asp-items="@ViewBag.v" class="form-control">
                <option value="10">Bırakmak İstenen Lokasyonu Seçiniz</option>
            </select>
        </div>
        <div class="form-group">
            <input type="text" asp-for="Age" class="form-control" placeholder="Yaşınız">
        </div>
        <div class="form-group">
            <input type="text" asp-for="DriverLicanseYear" class="form-control" placeholder="Ehliyet Yılınız">
        </div>
        <div class="form-group">
            <textarea asp-for="Description" cols="30" rows="7" class="form-control" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>
</div>