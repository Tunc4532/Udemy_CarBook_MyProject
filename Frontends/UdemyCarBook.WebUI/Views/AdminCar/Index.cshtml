@model List<ResultCarWithBrandsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalar ile ilgili silme, güncelleme, listeleme ve arama işlemlerini 
                            bu sayfa üzerinden yapabilirsiniz
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Vites Türü</th>
                                        <th>Km</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Detaylar</th>
                                        <th>Özellik Ata</th>
                                        <th>Sitede Gör</th>
                                        <th>Fiyat Bilgileri</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        count++;
                                        <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.BrandName</td>
                                        <td>@item.Model</td>
                                        <td>@item.Transmission</td>
                                        <td>@item.Km</td>
                                        <td><a href="/AdminCar/RemoveCar/@item.CarID" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/AdminCar/UpdateCar/@item.CarID" class="btn btn-warning">Güncelle</a></td>
                                        <td><a href="/Admin/AdminCarFeatureDetail/Index/@item.CarID" class="btn btn-success">Detaylar</a></td>
                                        <td><a href="/Admin/AdminCarFeatureDetail/CreateFeatureByCarId/@item.CarID" class="btn btn-info">Özellik Ata</a></td>
                                        <td><a href="/AdminCar/CarDetail/@item.CarID" class="btn btn-dark">Sitede Gör</a></td>
                                        <td><a href="/AdminCar/CarDetail/@item.CarID" class="btn btn-secondary">Fiyat Bilgileri</a></td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminCar/CreateCar/" class="btn btn-info">Yeni Araç Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
