@model List<ResultReviewByCarIdDto>

<div class="tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
    <div class="row">
        <div class="col-md-7">
            <h3 class="head">Yorumlar</h3>
            @foreach (var item in Model)
            {
                <div class="review d-flex">
                    <div class="user-img" style="background-image: url(@item.coustomerImage)"></div>
                    <div class="desc">
                        <h4>
                            <span class="text-left">@item.coustomerName</span>
                            <span class="text-right">@item.reviewDate.ToLongDateString()</span>
                        </h4>
                        <p class="star">
                            <span>
                                <i class="ion-ios-star"></i>
                                <i class="ion-ios-star"></i>
                                <i class="ion-ios-star"></i>
                                <i class="ion-ios-star"></i>
                                <i class="ion-ios-star"></i>
                            </span>
                            <span class="text-right"><a href="#" class="reply"><i class="icon-reply"></i></a></span>
                        </p>
                        <p>@item.comment</p>
                    </div>
                </div>
            }

        </div>
        <div class="col-md-5">
            <div class="rating-wrap">
                <h3 class="head">Değerlendirme Puanlaması</h3>
                <div class="wrap">
                    <p class="star">
                        <span>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            (98%)
                        </span>
                        <span>20 Puanlama</span>
                    </p>
                    <p class="star">
                        <span>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
                            <i class="ion-ios-star"></i>
