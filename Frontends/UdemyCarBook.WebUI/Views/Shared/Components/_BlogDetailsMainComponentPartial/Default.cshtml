@model GetBlogByIdDto
<div class="col-md-8 ftco-animate">
    <h2 class="mb-3">@Model.Title</h2>
    <p>
       @Model.Description
    </p>
    <p>
        <img src="@Model.CoverImageUrl" alt="" class="img-fluid">
    </p>

    @await Component.InvokeAsync("_BlogDetailCloudTagByBlokComponentPartial", new { id = ViewBag.blogid })

    @await Component.InvokeAsync("_BlogDetailsAuthorAboutComponentPartial", new { id = ViewBag.blogid })
    
    <div class="pt-5 mt-5">
        <h3 class="mb-5">@ViewBag.commentCount Yorum</h3>
        @await Component.InvokeAsync("_CommentListByBlogVomponentPartial", new { id = ViewBag.blogid })
        <!-- END comment-list -->
        @* @await Component.InvokeAsync("_AddCommentComponentPartial") *@
        @await Html.PartialAsync("~/Views/Blog/AddComment.cshtml", new { id = ViewBag.blogid })

    </div>

</div> 